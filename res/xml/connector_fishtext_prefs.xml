<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/settings_fishtext">
	<CheckBoxPreference android:key="enable_fishtext"
		android:title="@string/enable_fishtext" />
	<EditTextPreference android:key="user_fishtext"
		android:title="@string/username_" android:dialogTitle="@string/username_"
		android:inputType="textEmailAddress" android:dependency="enable_fishtext" />
	<EditTextPreference android:key="password_fishtext"
		android:inputType="textPassword" android:title="@string/password_"
		android:dialogTitle="@string/password_" android:dependency="enable_fishtext" />
	<PreferenceScreen android:title="@string/create_account_"
		android:summary="@string/partner_fishtext_hint">
		<intent android:action="android.intent.action.VIEW"
			android:data="@string/partner_fishtext_url" />
	</PreferenceScreen>
</PreferenceScreen>
